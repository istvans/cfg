#==============================================================================
function True
{
    true
    echo $?
}
#==============================================================================
function False
{
    false
    echo $?
}
#==============================================================================
function get_log_date
{
    /bin/date +"%Y.%m.%d %H:%M:%S.%N%Z"
}
#==============================================================================
function log
{
    dt=$(get_log_date)
    echo "$dt $@"
}
#==============================================================================
function crashburn
{
    exitcode=$?
    if [ $exitcode -ne 0 ]; then
        local line=$(caller | cut -f1 -d' ')
        ((line -= 1))
        log "EXECUTION FAILED ON LINE: $line! [EXIT CODE: $exitcode]"
        exit $exitcode
    fi
}
#==============================================================================
