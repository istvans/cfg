POSITIONAL=()
MALNA=false
while [[ $# -gt 0 ]]; do
    key="$1"
    case $key in
        -m|--malna)
            MALNA=true
            shift # past argument
        ;;
        *)  # unknown option
            POSITIONAL+=("$1") # save it in an array for later
            shift # past argument
        ;;
    esac
done
set -- "${POSITIONAL[@]}" # restore positional parameters

echo "MALNA setup? $MALNA"
